{
  "appId": "com.walker.healthmanager",
  "productName": "E-Health Manager",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist-electron/**/*",
    "dist/**/*"
  ],
  "extraResources": [
    {
      "from": "resources/icon.png",
      "to": "icon.png"
    }
  ],
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.utilities"
  },
  "win": {
    "target": ["nsis", "portable"]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
